  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE_URL}}/auth/register",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('ACCESS_TOKEN', response.accessToken);",
                  "    pm.environment.set('REFRESH_TOKEN', response.refreshToken);",
                  "    pm.environment.set('USER_ID', response.user.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE_URL}}/auth/login",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('ACCESS_TOKEN', response.accessToken);",
                  "    pm.environment.set('REFRESH_TOKEN', response.refreshToken);",
                  "    pm.environment.set('USER_ID', response.user.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{AUTH_BASE_URL}}/auth/profile",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{REFRESH_TOKEN}}\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE_URL}}/auth/refresh",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["auth", "refresh"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('ACCESS_TOKEN', response.accessToken);",
                  "    pm.environment.set('REFRESH_TOKEN', response.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{AUTH_BASE_URL}}/users",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{AUTH_BASE_URL}}/health",
              "host": ["{{AUTH_BASE_URL}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Product Service",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"MacBook Pro\",\n  \"description\": \"High-performance laptop for professionals\",\n  \"price\": 1999.99,\n  \"category\": \"Electronics\",\n  \"stock\": 10,\n  \"images\": [\"https://example.com/image1.jpg\"],\n  \"tags\": [\"laptop\", \"apple\", \"professional\"]\n}"
            },
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('PRODUCT_ID', response.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/{{PRODUCT_ID}}",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "{{PRODUCT_ID}}"]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"MacBook Pro 16-inch\",\n  \"price\": 2499.99,\n  \"stock\": 5\n}"
            },
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/{{PRODUCT_ID}}",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "{{PRODUCT_ID}}"]
            }
          }
        },
        {
          "name": "Get My Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/my-products",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "my-products"]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/search?q=laptop",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Get Products by Category",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/category/Electronics",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "category", "Electronics"]
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/products/{{PRODUCT_ID}}",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["products", "{{PRODUCT_ID}}"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{PRODUCT_BASE_URL}}/health",
              "host": ["{{PRODUCT_BASE_URL}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "AUTH_BASE_URL",
      "value": "http://localhost:3001"
    },
    {
      "key": "PRODUCT_BASE_URL",
      "value": "http://localhost:3002"
    }
  ]
}
